# Maintainer: Piotr Gorski <lucjan.lucjanov@gmail.com>
# Maintainer: Jagoda Gorska <juliagoda.dev@gmail.com>

pkgname=qfaktury-qt5-git
_gitname=qfaktury 
pkgver=0.7.1.71.g17ab98d 
pkgrel=2
pkgdesc="Program fakturujÄ…cy w Qt5" 
url="https://github.com/juliagoda/qfaktury" 
depends=('qt5-webengine' 'qt5-base' 'quazip') 
makedepends=('git')
arch=('i686' 'x86_64') 
license=('GPL') 
conflicts=('qfaktury') 
provides=('qfaktury') 
source=("git+https://github.com/juliagoda/qfaktury") 
md5sums=('SKIP') 

pkgver() {
       cd qfaktury
       git describe --tags --long | sed 's/^v//;s/-/./g'
       }

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${_gitname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
